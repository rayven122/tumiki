{
  "$schema": "https://turborepo.org/schema.json",
  "ui": "tui",
  "globalEnv": [
    "OAUTH_CALLBACK_BASE_URL",
    "PRISMA_FIELD_ENCRYPTION_KEY",
    "PRISMA_FIELD_DECRYPTION_KEYS",
    "PRISMA_FIELD_ENCRYPTION_HASH_SALT",
    "API_KEY_PREFIX",
    "API_KEY_LENGTH",
    "DATABASE_URL",
    "AUTH0_DOMAIN",
    "AUTH0_SECRET",
    "AUTH0_CLIENT_ID",
    "AUTH0_CLIENT_SECRET",
    "AUTH0_OAUTH_CLIENT_ID",
    "AUTH0_OAUTH_CLIENT_SECRET",
    "AUTH0_M2M_CLIENT_ID",
    "AUTH0_M2M_CLIENT_SECRET",
    "AUTH0_M2M_DOMAIN",
    "AUTH0_AUDIENCE",
    "AUTH0_SCOPE",
    "AUTH0_WEBHOOK_SECRET",
    "APP_BASE_URL",
    "NEXTAUTH_URL",
    "SMTP_HOST",
    "SMTP_PORT",
    "SMTP_USER",
    "SMTP_PASS",
    "FROM_EMAIL",
    "XAI_API_KEY",
    "NOTION_API_TOKEN",
    "MICROCMS_API_KEY",
    "MICROCMS_SERVICE_DOMAIN",
    "MICROCMS_TUMIKI_BLOG_API_KEY",
    "MICROCMS_TUMIKI_BLOG_SERVICE_DOMAIN",
    "STRIPE_SECRET_KEY",
    "STRIPE_WEBHOOK_SECRET",
    "STRIPE_API_VERSION",
    "BETTER_AUTH_SECRET",
    "BETTER_AUTH_URL",
    "KEYCLOAK_ISSUER",
    "KEYCLOAK_CLIENT_ID",
    "KEYCLOAK_CLIENT_SECRET",
    "AUTH_SECRET",
    "AUTH_GOOGLE_ID",
    "AUTH_GOOGLE_SECRET",
    "AUTH_GITHUB_ID",
    "AUTH_GITHUB_SECRET"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", "out/**", "dist-electron/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "cache": false,
      "persistent": true
    },
    "format": {
      "outputs": [".cache/.prettiercache"],
      "outputLogs": "new-only"
    },
    "lint": {
      "dependsOn": ["^build"],
      "outputs": [".cache/.eslintcache"]
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "outputs": [".cache/tsbuildinfo.json"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}
