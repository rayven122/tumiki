{
  "extends": "@tumiki/tsconfig/node.json",
  "compilerOptions": {
    "verbatimModuleSyntax": true,
    "rootDir": "./src",
    "outDir": "./build",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["vitest/globals", "node", "supertest"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "tsup.config.ts"]
}
