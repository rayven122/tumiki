{
  "extends": "@tumiki/tsconfig/node.json",
  "compilerOptions": {
    "baseUrl": ".",
    "verbatimModuleSyntax": true,
    "outDir": "./build",
    "rootDir": "./src",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["bun-types"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}
