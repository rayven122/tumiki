{
  "extends": "@tumiki/tsconfig/node.json",
  "compilerOptions": {
    "verbatimModuleSyntax": true,
    "rootDir": "./",
    "outDir": "./build",
    "declaration": true,
    "declarationMap": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": [
      "vitest/globals",
      "node",
      "supertest",
      "express-serve-static-core",
      "qs"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "scripts/**/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": ["node_modules", "build"]
}
