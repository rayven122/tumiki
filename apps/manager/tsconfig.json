{
  "extends": "@tumiki/tsconfig/nextjs.json",
  "compilerOptions": {
    "verbatimModuleSyntax": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.js",
    ".next/types/**/*.ts",
    "postcss.config.mjs"
  ],
  "types": ["web", "bun-types"],
  "exclude": ["node_modules", "mcp"]
}
