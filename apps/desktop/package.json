{
  "name": "@tumiki/desktop",
  "version": "0.1.0",
  "private": true,
  "author": "Tumiki",
  "description": "Tumiki Desktop Application",
  "type": "module",
  "main": "dist-electron/main/index.cjs",
  "scripts": {
    "dev": "pnpm with-env electron-vite dev",
    "build": "electron-vite build",
    "build:mac": "pnpm build && electron-builder --mac --config electron-builder.yml",
    "build:release": "pnpm build && electron-builder --mac --config electron-builder.yml --publish never",
    "preview": "electron-vite preview",
    "start": "electron-vite preview",
    "clean": "git clean -xdf .cache .turbo node_modules dist-electron out",
    "typecheck": "tsc --noEmit",
    "with-env": "dotenv -e ../../.env --",
    "lint": "eslint",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "test": "vitest",
    "db:generate": "pnpm with-env prisma generate --schema=./prisma/schema.prisma",
    "db:push": "pnpm with-env prisma db push --schema=./prisma/schema.prisma",
    "db:migrate": "pnpm with-env prisma migrate dev --schema=./prisma/schema.prisma",
    "db:studio": "pnpm with-env prisma studio --schema=./prisma/schema.prisma"
  },
  "dependencies": {
    "@tanstack/react-query": "catalog:",
    "@trpc/client": "catalog:",
    "@trpc/react-query": "catalog:",
    "@tumiki/db": "workspace:*",
    "clsx": "^2.1.1",
    "electron-store": "^10.0.0",
    "electron-updater": "^6.3.9",
    "jotai": "^2.15.2",
    "lucide-react": "^0.486.0",
    "react": "catalog:react19",
    "react-dom": "catalog:react19",
    "react-router-dom": "^7.5.0",
    "superjson": "^2.2.6",
    "tailwind-merge": "^3.4.0",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.17",
    "@tumiki/tailwind-config": "workspace:*",
    "@tumiki/tsconfig": "workspace:*",
    "@tumiki/vitest-config": "workspace:*",
    "@types/node": "^22.19.1",
    "@types/react": "catalog:react19",
    "@types/react-dom": "catalog:react19",
    "@typescript/native-preview": "7.0.0-dev.20250814.1",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "catalog:",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.2.1",
    "dotenv-cli": "^8.0.0",
    "electron": "^35.7.5",
    "electron-builder": "^26.0.12",
    "electron-vite": "^4.0.1",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "catalog:",
    "typescript": "catalog:",
    "typescript-eslint": "^8.48.1",
    "vitest": "catalog:"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
