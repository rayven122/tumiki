{
  "permissions": {
    "allow": [
      "Read(.env.test)",
      "Bash(git:*)",
      "Bash(pnpm:*)",
      "Bash(prettier:*)",
      "Bash(npm ls:*)",
      "Bash(gh:*)",
      "Bash(./start-prod.sh:*)",
      "mcp__tumiki",
      "mcp__context7",
      "mcp__figma",
      "mcp__serena",
      "mcp__playwright",
      "mcp__linear-server",
      "mcp__ide__getDiagnostics",
      "mcp__github-mcp",
      "mcp__linear"
    ],
    "deny": ["cat:*", "Read(.env)", "Read(.env.*)", "Read(*production.json)"]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "pnpm format:fix && pnpm lint:fix || true"
          }
        ]
      }
    ]
  }
}
