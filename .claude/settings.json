{
  "permissions": {
    "deny": ["Read(.env.*)", "Read(**/*token*)", "Read(**/*key*)"]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "pnpm format:fix && pnpm lint:fix"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "./stop-hook-with-loop-protection.sh"
          }
        ]
      }
    ]
  }
}
