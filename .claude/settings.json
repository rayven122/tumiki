{
  "permissions": {
    "allow": ["Read(.env.test)"],
    "deny": ["cat:*", "Read(.env)", "Read(.env.*)", "Read(*production.json)"]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "pnpm format:fix && pnpm lint:fix || true"
          }
        ]
      }
    ]
  }
}
