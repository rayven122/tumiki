{
  "permissions": {
    "deny": [
      "cat:*",
      "Read(.env)",
      "Read(.env.*)",
      "Read(**/*token*)",
      "Read(**/*key*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "pnpm format:fix && pnpm lint:fix"
          }
        ]
      }
    ]
  }
}
