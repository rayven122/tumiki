{
  "extends": "@tumiki/tsconfig/node.json",
  "compilerOptions": {
    "outDir": "./dist",
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./*"]
    }
  },
  "types": ["bun-types"],
  "include": ["src", "prisma/generated"],
  "exclude": [
    "node_modules",
    "prisma/generated/fabbrica",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/__tests__/**/*"
  ]
}
