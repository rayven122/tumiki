{
  "extends": "@tumiki/tsconfig/base.json",
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./*"]
    },
    /** Emit both JS and types for runtime usage. */
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "noEmit": false,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "${configDir}/dist"
  },
  "include": ["src", "prisma/generated", "vitest.config.ts"],
  "exclude": [
    "node_modules",
    "prisma/generated/fabbrica",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/__tests__/**/*"
  ]
}
