{
  "extends": "@tumiki/tsconfig/node.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./dist",
    "emitDeclarationOnly": false,
    "lib": ["ES2022"],
    "types": ["node", "vitest/globals", "vitest-environment-vprisma"]
  },
  "include": ["src", "prisma/generated", "src/testing/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "prisma/generated/fabbrica",
    "src/generated",
    "prisma.config.ts",
    "vitest.config.ts"
  ]
}
