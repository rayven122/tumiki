{
  "extends": "@tumiki/tsconfig/node.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./dist"
  },
  "include": ["src", "prisma/generated"],
  "exclude": [
    "node_modules",
    "prisma/generated/fabbrica",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/__tests__/**/*",
    "src/testing/**/*",
    "tsup.config.ts",
    "prisma.config.ts"
  ]
}
