{
  "extends": "@tumiki/tsconfig/node.json",
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./*"]
    }
  },
  "include": ["src", "prisma/generated", "vitest.config.ts"],
  "exclude": [
    "node_modules",
    "prisma/generated/fabbrica",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/__tests__/**/*"
  ]
}
