{
  "name": "@tumiki/db",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./tcp": {
      "types": "./dist/tcpClient.d.ts",
      "import": "./dist/tcpClient.mjs",
      "require": "./dist/tcpClient.js"
    },
    "./prisma": {
      "types": "./dist/prisma.d.ts",
      "import": "./dist/prisma.mjs",
      "require": "./dist/prisma.js"
    },
    "./zod": {
      "types": "./dist/zod.d.ts",
      "import": "./dist/zod.mjs",
      "require": "./dist/zod.js"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.mjs",
      "require": "./dist/server.js"
    }
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "pnpm db:generate && tsup",
    "build:clean": "rm -rf dist",
    "clean": "git clean -xdf .cache .turbo node_modules dist build",
    "typecheck": "tsc --noEmit",
    "with-env": "dotenv -e ../../.env --",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "format": "prettier --check . --ignore-path ../../.gitignore --write",
    "db:generate": "pnpm with-env prisma generate && pnpm format",
    "db:migrate": "pnpm with-env prisma migrate dev",
    "db:deploy": "pnpm with-env prisma migrate deploy",
    "db:studio": "pnpm with-env prisma studio",
    "postinstall": "pnpm db:generate",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.0",
    "@prisma/adapter-neon": "^6.7.0",
    "@prisma/client": "^6.7.0",
    "@t3-oss/env-nextjs": "^0.12.0",
    "prisma-field-encryption": "^1.6.0",
    "ws": "^8.18.2",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@quramy/prisma-fabbrica": "^2.2.1",
    "@tumiki/eslint-config": "workspace:*",
    "@tumiki/prettier-config": "workspace:*",
    "@tumiki/tsconfig": "workspace:*",
    "@tumiki/vitest-config": "workspace:*",
    "@types/ws": "^8.18.1",
    "@vitest/coverage-v8": "catalog:",
    "dotenv-cli": "^8.0.0",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "prisma": "^6.7.0",
    "prisma-markdown": "^2.0.0",
    "tsup": "^8.3.5",
    "typescript": "catalog:",
    "typescript-eslint": "^8.33.0",
    "vitest": "catalog:",
    "zod-prisma-types": "^3.2.4"
  },
  "prisma": {
    "schema": "./prisma/schema"
  },
  "prettier": "@tumiki/prettier-config"
}
