{
  "name": "@tumiki/db",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/src/client.d.ts",
      "default": "./dist/src/client.js"
    },
    "./client": {
      "types": "./dist/src/client.d.ts",
      "default": "./dist/src/client.js"
    },
    "./server": {
      "types": "./dist/src/server.d.ts",
      "default": "./dist/src/server.js"
    },
    "./tcp": {
      "types": "./dist/src/tcpClient.d.ts",
      "default": "./dist/src/tcpClient.js"
    },
    "./prisma": {
      "types": "./dist/src/prisma.d.ts",
      "default": "./dist/src/prisma.js"
    },
    "./zod": {
      "types": "./dist/src/zod.d.ts",
      "default": "./dist/src/zod.js"
    },
    "./testing": {
      "types": "./dist/src/testing/index.d.ts",
      "default": "./dist/src/testing/index.js"
    }
  },
  "scripts": {
    "dev": "tsc",
    "build": "pnpm db:generate && tsc",
    "clean": "git clean -xdf .cache .turbo node_modules dist build",
    "typecheck": "tsc --noEmit && tsc --noEmit -p tsconfig.test.json",
    "with-env": "dotenv -e ../../.env --",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "format": "prettier --check . --ignore-path ../../.gitignore --write",
    "db:generate": "pnpm with-env prisma generate && pnpm format",
    "db:migrate": "pnpm with-env prisma migrate dev",
    "db:deploy": "pnpm with-env prisma migrate deploy",
    "db:studio": "pnpm with-env prisma studio",
    "postinstall": "pnpm db:generate",
    "test": "bun test"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.0",
    "@prisma/adapter-neon": "^6.13.0",
    "@prisma/client": "^6.13.0",
    "@t3-oss/env-nextjs": "^0.12.0",
    "prisma-field-encryption": "^1.6.0",
    "ws": "^8.18.2",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@quramy/prisma-fabbrica": "^2.2.1",
    "@tumiki/eslint-config": "workspace:*",
    "@tumiki/prettier-config": "workspace:*",
    "@tumiki/tsconfig": "workspace:*",
    "@types/bun": "^1.1.20",
    "@types/ws": "^8.18.1",
    "bun-mock-prisma": "^1.2.1",
    "dotenv-cli": "^8.0.0",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "prisma": "^6.13.0",
    "prisma-markdown": "^2.0.0",
    "typescript": "catalog:",
    "typescript-eslint": "^8.33.0",
    "zod-prisma-types": "^3.2.4"
  },
  "prisma": {
    "schema": "./prisma/schema"
  },
  "prettier": "@tumiki/prettier-config"
}
