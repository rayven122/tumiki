{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "emitDeclarationOnly": false,
    "types": ["node"]
  },
  "exclude": [
    "node_modules",
    "dist",
    "prisma/generated/fabbrica",
    "src/generated",
    "prisma.config.ts",
    "vitest.config.ts",
    "**/*.test.ts",
    "**/*.spec.ts",
    "src/__tests__/**/*",
    "src/testing/setup.ts"
  ]
}
