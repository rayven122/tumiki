{
  "name": "@tumiki/mailer",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "default": "./dist/src/index.js"
    },
    "./emails": {
      "types": "./dist/src/emails/index.d.ts",
      "default": "./dist/src/emails/index.js"
    },
    "./templates": {
      "types": "./dist/src/templates/index.d.ts",
      "default": "./dist/src/templates/index.js"
    }
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "typecheck": "tsc --noEmit",
    "typecheck:dev": "tsgo --noEmit",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "format:fix": "prettier --write . --ignore-path ../../.gitignore",
    "email:dev": "email dev --dir src/emails --port 3001",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@react-email/components": "^0.0.31",
    "@react-email/render": "^1.1.1",
    "nodemailer": "^6.9.8",
    "react": "catalog:react19",
    "react-dom": "catalog:react19",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@tumiki/eslint-config": "workspace:*",
    "@tumiki/prettier-config": "workspace:*",
    "@tumiki/tsconfig": "workspace:*",
    "@tumiki/vitest-config": "workspace:*",
    "@types/node": "^22.15.3",
    "@types/nodemailer": "^6.4.14",
    "@types/react": "catalog:react19",
    "@types/react-dom": "catalog:react19",
    "@typescript/native-preview": "7.0.0-dev.20250814.1",
    "@vitest/coverage-v8": "catalog:",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "react-email": "^3.0.3",
    "tsup": "^8.3.5",
    "typescript": "catalog:",
    "typescript-eslint": "^8.33.0",
    "vitest": "catalog:"
  },
  "prettier": "@tumiki/prettier-config"
}
