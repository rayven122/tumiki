{
  "name": "@tumiki/mailer",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./emails": {
      "types": "./dist/emails/index.d.ts",
      "default": "./dist/emails/index.js"
    },
    "./templates": {
      "types": "./dist/templates/index.d.ts",
      "default": "./dist/templates/index.js"
    }
  },
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "typecheck": "tsc --noEmit",
    "lint": "eslint",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "email:dev": "email dev --dir src/emails --port 3001",
    "test": "vitest"
  },
  "dependencies": {
    "@react-email/components": "^1.0.6",
    "@react-email/render": "^2.0.4",
    "nodemailer": "^7.0.11",
    "react": "catalog:react19",
    "react-dom": "catalog:react19",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@tumiki/eslint-config": "workspace:*",
    "@tumiki/prettier-config": "workspace:*",
    "@tumiki/tsconfig": "workspace:*",
    "@tumiki/vitest-config": "workspace:*",
    "@types/node": "^22.19.10",
    "@types/nodemailer": "^6.4.21",
    "@types/react": "catalog:react19",
    "@types/react-dom": "catalog:react19",
    "@typescript/native-preview": "7.0.0-dev.20260301.1",
    "@vitest/coverage-v8": "catalog:",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "react-email": "^5.2.5",
    "typescript": "catalog:",
    "typescript-eslint": "^8.48.1",
    "vitest": "catalog:"
  },
  "prettier": "@tumiki/prettier-config"
}
