{
  "extends": "@tumiki/tsconfig/base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "resolveJsonModule": true,
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "sourceMap": true,
    "incremental": true,
    "tsBuildInfoFile": ".cache/tsbuildinfo",
    "noEmit": false
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
