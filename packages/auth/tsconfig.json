{
  "extends": "@tumiki/tsconfig/node.json",
  "compilerOptions": {
    "rootDir": "src",
    "declarationDir": "dist/src",
    "lib": ["ES2022", "DOM"],
    "types": ["bun-types"],
    "module": "ESNext",
    "moduleResolution": "Bundler"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.js"],
  "exclude": ["node_modules", "dist"]
}
