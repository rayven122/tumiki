{
  "name": "tumiki",
  "type": "module",
  "private": true,
  "version": "0.1.0",
  "engines": {
    "node": ">=22.14.0",
    "pnpm": ">=9.6.0"
  },
  "packageManager": "pnpm@10.11.0",
  "scripts": {
    "build": "turbo run build",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo run clean",
    "dev": "turbo watch dev --continue",
    "start": "turbo run start --continue",
    "format": "turbo run format --continue -- --cache --cache-location .cache/.prettiercache",
    "format:fix": "turbo run format --continue -- --write --cache --cache-location .cache/.prettiercache",
    "typecheck": "turbo run typecheck",
    "typecheck:dev": "turbo run typecheck:dev",
    "lint": "turbo run lint --continue -- --cache --cache-location .cache/.eslintcache",
    "lint:fix": "turbo run lint --continue -- --fix --cache --cache-location .cache/.eslintcache",
    "lint:ws": "pnpm dlx sherif@latest",
    "postinstall": "pnpm lint:ws",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:turbo": "turbo run test",
    "check": "concurrently --kill-others-on-fail --names \"lint,format,typecheck\" \"pnpm run lint\" \"pnpm run format\" \"pnpm run typecheck\"",
    "db:generate": "pnpm --filter @tumiki/db db:generate",
    "inspector": "pnpm --filter @tumiki/proxy-server inspector",
    "env:pull": "vercel env pull apps/proxyServer/.env",
    "env:push": "bash scripts/vercel-env-push.sh .env development",
    "deploy": "bash scripts/deploy-all.sh",
    "deploy:vercel": "vercel --prod",
    "deploy:gce": "bash apps/proxyServer/deploy-to-gce.sh",
    "deploy:dry-run": "bash scripts/deploy-all.sh --dry-run",
    "verify:stripe": "tsx scripts/verify-stripe-env.ts",
    "stripe:listen": "stripe listen --forward-to localhost:3000/api/webhooks/stripe"
  },
  "devDependencies": {
    "@typescript/native-preview": "7.0.0-dev.20250814.1",
    "@vitest/coverage-v8": "catalog:",
    "concurrently": "^9.0.1",
    "turbo": "^2.5.1",
    "typescript": "catalog:",
    "vitest": "catalog:"
  }
}
