# ==========================================
# Tumiki OAuth - Environment Variables Example
# ==========================================

# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/tumiki"
DIRECT_URL="postgresql://user:password@localhost:5432/tumiki"

# Redis Configuration
REDIS_URL="redis://localhost:6379"

# Auth0 Configuration
AUTH0_SECRET="your-auth0-secret"
AUTH0_BASE_URL="http://localhost:3000"
AUTH0_ISSUER_BASE_URL="https://your-tenant.auth0.com"
AUTH0_CLIENT_ID="your-client-id"
AUTH0_CLIENT_SECRET="your-client-secret"

# Next.js Configuration
NEXT_PUBLIC_APP_URL="http://localhost:3000"


# ==========================================
# Maintenance Mode Configuration
# ==========================================
# メンテナンスモードの有効/無効（true/false）
MAINTENANCE_MODE=false

# メンテナンス中でもアクセスを許可するIPアドレス（カンマ区切り）
# 例: "192.168.1.1,10.0.0.1"
MAINTENANCE_ALLOWED_IPS=""

# メンテナンス終了予定時刻（ISO8601形式）
# 例: "2025-01-11T03:00:00Z"
MAINTENANCE_END_TIME=""

# メンテナンスページに表示する終了予定時刻（Next.js用）
NEXT_PUBLIC_MAINTENANCE_END_TIME=""

# ==========================================
# Deployment Configuration
# ==========================================
# GCE Instance Configuration
GCE_INSTANCE_NAME="tumiki-instance-production"
GCE_ZONE="asia-northeast2-c"
GCP_PROJECT_ID="your-gcp-project-id"

# Deployment Settings
DEPLOY_USER="tumiki-deploy"
REMOTE_PATH="/opt/tumiki"
REPO_URL="git@github.com:your-org/tumiki.git"
BRANCH="main"

# ==========================================
# Other Configuration
# ==========================================
# Add other environment variables as needed