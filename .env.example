# ==========================================
# Tumiki OAuth - Environment Variables Example
# ==========================================

# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/tumiki"
DIRECT_URL="postgresql://user:password@localhost:5432/tumiki"

# Redis Configuration
REDIS_URL="redis://localhost:6379"

# Upstash Redis Configuration (for mcp-proxy)
# ローカル開発用: Docker REST Proxyを使用
UPSTASH_REDIS_REST_URL="http://localhost:8079"
UPSTASH_REDIS_REST_TOKEN="local_dev_token_12345"

# 本番環境用: Upstash Redisサービスを使用
# UPSTASH_REDIS_REST_URL="https://xxxxx.upstash.io"
# UPSTASH_REDIS_REST_TOKEN="AxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxQ"

# Auth0 Configuration
AUTH0_SECRET="your-auth0-secret"
AUTH0_BASE_URL="http://localhost:3000"
AUTH0_ISSUER_BASE_URL="https://your-tenant.auth0.com"
AUTH0_CLIENT_ID="your-client-id"
AUTH0_CLIENT_SECRET="your-client-secret"

# Next.js Configuration
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# ==========================================
# Maintenance Mode Configuration
# ==========================================
# メンテナンスモードの有効/無効（true/false）
MAINTENANCE_MODE=false

# メンテナンス中でもアクセスを許可するIPアドレス（カンマ区切り）
# 例: "192.168.1.1,10.0.0.1"
MAINTENANCE_ALLOWED_IPS=""

# メンテナンス終了予定時刻（ISO8601形式）
# 例: "2025-01-11T03:00:00Z"
MAINTENANCE_END_TIME=""

# メンテナンスページに表示する終了予定時刻（Next.js用）
NEXT_PUBLIC_MAINTENANCE_END_TIME=""

# ==========================================
# Deployment Configuration
# ==========================================
# GCE Instance Configuration
GCE_INSTANCE_NAME="tumiki-instance-production"
GCE_ZONE="asia-northeast2-c"
GCP_PROJECT_ID="your-gcp-project-id"

# Deployment Settings
DEPLOY_USER="tumiki-deploy"
REMOTE_PATH="/opt/tumiki"
REPO_URL="git@github.com:your-org/tumiki.git"
BRANCH="main"

# ==========================================
# Verification Mode Configuration
# ==========================================
# 検証モードの有効化（developmentまたはtestのみ）
VERIFICATION_MODE=false

# デフォルトで使用するユーザーID
VERIFICATION_USER_ID=verification|admin

# 利用可能なユーザーID（カンマ区切り）
VERIFICATION_AVAILABLE_USERS=verification|admin,verification|user

# ==========================================
# Cache Encryption Configuration
# ==========================================
# 暗号化キー（32バイト = 64文字の16進数文字列）
# 生成方法: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
CACHE_ENCRYPTION_KEY="0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef"

# Redis暗号化キー（32バイト = 64文字の16進数文字列）
# OAuth トークンなど機密データのRedis保存時に使用
REDIS_ENCRYPTION_KEY="0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef"

# ==========================================
# Other Configuration
# ==========================================
# Add other environment variables as needed